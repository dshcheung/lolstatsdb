  var n = {};

  n.tooMany = function (scope) {
    var n = noty({text: 'Too many sumbmoner renewing, please try again later', type: "error", timeout: 3000, closeWith: ['click']});
  }

  n.serviceError = function (scope) {
    var n = noty({text: "Something is wrong with Riot's server, please try again later", type: "error", timeout: 3000, closeWith: ['click']});
  }

